.web {
    position: relative;
    height: 100vh;
    width: 100vw;
}

.result_icon {
    position: absolute;
    height: 150rpx;
    width: 170rpx;
    transform: translate(-50% , -50%);
    top: 15%;
    left: 50%;
}

.score {
    position: absolute;
    line-height: 100rpx;
    font-size: 100rpx;
    transform: translate(-50% , -50%);
    top: 25%;
    left: 50%;
}

.title {
    position: absolute;
    line-height: 100rpx;
    width: 100vw;
    font-size: 50rpx;
    font-family: serif;
    text-align: center;
    transform: translate(-50% , -50%);
    top: 35%;
    left: 50%;
}

.message {
    position: absolute;
    height: auto;
    width: 60vw;
    font-family: serif;
    font-size: 30rpx;
    text-indent: 60rpx;
    transform: translate(-50% , -50%);
    top: 45%;
    left: 50%;
}

.share, .back_index, .check_top {
    position: absolute;
    border-radius: 8px;
    font-size: 40rpx;
    font-family: serif;
    transform: translate(-50% , -50%);
    left: 50%;
}

.share {
    top: 60%;
    background-color: #4090FE;
    color: white;
}

.back_index {
    top: 75%;
    background-color: transparent;
    border: 1px black solid;
}

.check_top {
    top: 85%;
    background-color: transparent;
    border: 1px black solid;
}