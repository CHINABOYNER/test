.web {
    position: relative;
    height: 100vh;
    width: 100vw;
    background-image: linear-gradient(to bottom, #ffb61e, white);
}

.xiaobi_music {
    position: absolute;
    height: 600rpx;
    width: 600rpx;
    transform: translate(-50%, 0);
    top: 400rpx;
    left: 50%;
    z-index: 1;
}

.bitworkshop_icon {
    position: absolute;
    height: 200rpx;
    width: 200rpx;
    top: 670rpx;
    left: 370rpx;
    z-index: 2;
}

.select {
    animation: rotate 3s linear infinite;
}

.message {
    position: absolute;
    height: 240rpx;
    width: 300rpx;
    border-radius: 15px;
    background-color: rgba(0, 136, 153, 0.7);
    transform: translate(-50%, 0);
    top: 420rpx;
    left: 70%;
    display: flex;
    flex-direction: column;
}

.text {
    height: 60rpx;
    width: 260rpx;
    line-height: 60rpx;
    font-size: 35rpx;
    border-radius: 5px;
    box-shadow: 1px 2px 2px black;
    color: white;
}

.text1 {
    background-color: rgba(0, 136, 153, 0.7);
    text-align: center;
    padding: 10rpx 20rpx;
    border-radius: 15px;
}

.text2,.text3 {
    margin: 5rpx 10rpx;
    padding: 5rpx 10rpx;
}

.wave {
    position: absolute;
    height: 25vw;
    width: 100vw;
    transform: translate(0, -50%);
    top: 50%;
}

.play_icon {
    position: absolute;
    height: 100rpx;
    width: 100rpx;
    transform: translate(-50%, -50%);
    top: 75%;
    left: 50%;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 20rpx;
}

.button_view {
    position: absolute;
    top: 85%;
    width: 100vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.button {
    background-color: #FFA257;
    color: white;
    border-radius: 15px;
    box-shadow: inset 0px 0px 5px -2px black;
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}