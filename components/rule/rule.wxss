.web {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.7);
    height: 100vh;
    width: 100vw;
    z-index: 1;
}

.rule_view {
    position: absolute;
    background-image: linear-gradient(to top, #6F74DB,#BCBFF9);
    transform: translate(-50% , -50%);
    height: 60vh;
    width: 70vw;
    padding: 5vh 5vw;
    left: 50%;
    top: 50%;
    border-radius: 20px;
    animation: show 1s;
}

.title {
    position: absolute;
    transform: translate(-50% , 0);
    left: 50%;
    font-size: 50rpx;
    font-family: serif;
    line-height: 70rpx;
    border-bottom: 1px black solid;
}

.message_view {
    position: absolute;
    max-height: 46vh;
    height: auto;
    top: 15vh;
    width: 66vw;
    padding: 2vh 2vw;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    background-color: rgba(255, 255, 255, 0.3);
}

.message {
    font-size: 40rpx;
    height: auto;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
}

@keyframes show {
    0% {
        height: 0;
        width: 0;
    }

    20% {
        height: 0;
        width: 70vw;
    }

    100% {
        height: 60vh;
        width: 70vw;
    }
}