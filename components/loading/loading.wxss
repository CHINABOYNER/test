.web {
    position: relative;
    height: 100vh;
    width: 100vw;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 1;
}

.loading_view {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50% , -50%);
    /* background-color: rgba(0, 0, 0, 0.8);
    padding: 100rpx;
    border-radius: 15px; */
}

.bar {
    height: 120rpx;
    width: 12rpx;
    margin: 5rpx;
    background: white;
    display: inline-block;
    border-radius: 1px;
    animation: loading 1s linear infinite;
    transform-origin: bottom;
}

.bar1 {
    animation-delay: 0.1s;
}
.bar2 {
    animation-delay: 0.2s;
}
.bar3 {
    animation-delay: 0.3s;
}
.bar4 {
    animation-delay: 0.4s;
}
.bar5 {
    animation-delay: 0.5s;
}
.bar6 {
    animation-delay: 0.6s;
}
.bar7 {
    animation-delay: 0.7s;
}
.bar8 {
    animation-delay: 0.8s;
}

.loading_text {
    position: absolute;
    color: white;
    font-size: 30rpx;
    font-family: serif;
    top: 57%;
    left: 50%;
    transform: translate(-50% , -50%);
}

.bitworkshop_icon {
    position: absolute;
    height: 10vw;
    width: 10vw;
    top: 60vh;
    left: 45vw;
    animation: rotate 1s linear infinite;
}

@keyframes loading {
    0% {
        transform: scaleY(0.1);
    }

    50% {
        transform: scaleY(1);
        background: #8EAEE6;
    }

    100% {
        transform: scaleY(0.1);
        background-color: transparent;
    }
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}